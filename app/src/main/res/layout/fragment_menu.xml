<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Fragment.MenuFr">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <com.glide.slider.library.SliderLayout
                android:id="@+id/slider"
                android:layout_width="match_parent"
                android:layout_height="200dp" />

            <TextView
                android:id="@+id/textView18"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/futurbold"
                android:gravity="center"
                android:text="Layanan Aspirasi dan Pengaduan Masyarakat Landak"
                android:textSize="18sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/textView20"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:gravity="center"
                android:justificationMode="inter_word"
                android:paddingStart="5dp"
                android:paddingEnd="5dp"
                android:text="Silahkan Sampaikan Aspirasi, Pengaduan Maupun Laporan Anda Langsung Kepada Polres Landak" />

            <View
                android:id="@+id/divider6"
                android:layout_width="match_parent"
                android:layout_height="5dp"
                android:layout_marginStart="100dp"
                android:layout_marginEnd="100dp"
                android:background="?android:attr/listDivider" />

            <androidx.cardview.widget.CardView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="25dp"
                app:cardBackgroundColor="@color/white"
                app:cardCornerRadius="10dp">

                <ImageView
                    android:id="@+id/imageView20"
                    android:layout_width="match_parent"
                    android:layout_height="65dp"
                    android:layout_margin="5dp"
                    android:src="@drawable/silahkan" />
            </androidx.cardview.widget.CardView>

            <ImageView
                android:id="@+id/dmsldk"
                android:layout_width="match_parent"
                android:layout_height="75dp"
                android:src="@drawable/landak" />

            <ImageView
                android:id="@+id/dmslapor"
                android:layout_width="match_parent"
                android:layout_height="75dp"
                android:src="@drawable/laporv" />
            <ImageView
                android:id="@+id/wbs"
                android:layout_width="match_parent"
                android:layout_height="75dp"
                android:src="@drawable/wbs" />
        </LinearLayout>
    </ScrollView>
</FrameLayout>